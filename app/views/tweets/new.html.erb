<h1>GeekTwitter</h1>
<h3>新規Tweet</h3>
<%= form_for @tweet do |f| %>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body, :size => 140 %>
  </div>
    <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
    <div class='form-group'>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
    </div>
    <h5>総合評価</h5>
      <div class="post_form">
      <%= f.radio_button :overall, 5 ,id: 'star1'%>
      <label for="star1"><span class="text">わんだふる</span>★</label>

      <%= f.radio_button :overall, 4 ,id: 'star2'%>
      <label for="star2"><span class="text">ぐっど</span>★</label>

      <%= f.radio_button :overall, 3 ,id: 'star3'%>
      <label for="star3"><span class="text">ふつ～</span>★</label>

      <%= f.radio_button :overall, 2 ,id: 'star4'%>
      <label for="star4"><span class="text">いまいち</span>★</label>

      <%= f.radio_button :overall, 1 ,id: 'star5'%>
      <label for="star5"><span class="text">う～ん</span>★</label>
    </div>

    </div>
    <%= f.submit "投稿する" %>
<% end %>
<%= link_to "投稿一覧に戻る", tweets_path %>