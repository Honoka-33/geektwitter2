<h1>✍レビュー投稿</h1>
<%= form_for @tweet do |f| %>
  <div class="field">
    <%= f.label :感想 %>
    <%= f.text_field :body, :size => 40 %>
  </div>
    <div class="field">
    <%= f.label :写真 %>
    <%= f.file_field :image %>
  </div>
    <div class='form-group'>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
    </div>
    <h4>総合評価</h4>
      <div class="post_form">
      <%= f.radio_button :overall, 5 ,id: 'star1'%>
      <label for="star1"><span class="text">神</span>★</label>

      <%= f.radio_button :overall, 4 ,id: 'star2'%>
      <label for="star2"><span class="text">ぐっど</span>★</label>

      <%= f.radio_button :overall, 3 ,id: 'star3'%>
      <label for="star3"><span class="text">ふつ～</span>★</label>

      <%= f.radio_button :overall, 2 ,id: 'star4'%>
      <label for="star4"><span class="text">いまいち</span>★</label>

      <%= f.radio_button :overall, 1 ,id: 'star5'%>
      <label for="star5"><span class="text">う～ん</span>★</label>
    </div>

    </div>
    <%= f.submit "投稿する" %>
<% end %>
<%= link_to "投稿一覧に戻る", tweets_path %>

<style>
body {
  background: #f8fafc;
  font-family: 'Segoe UI', 'Hiragino Sans', 'Meiryo', sans-serif;
}
form {
  background: #fff6fa;
  border-radius: 18px;
  box-shadow: 0 4px 16px rgba(200, 200, 220, 0.15);
  padding: 32px 24px 24px 24px;
  max-width: 480px;
  margin: 32px auto 0 auto;
}
.field, .form-group, .post_form {
  margin-bottom: 20px;
}
label, .form-check-label {
  color: #7b6f72;
  font-weight: 500;
  margin-bottom: 6px;
}
input[type="text"], input[type="file"], .form-check-input {
  border: 1px solid #e0d7ec;
  border-radius: 8px;
  padding: 8px 12px;
  background: #f6faff;
  margin-top: 4px;
  font-size: 1em;
}
input[type="text"]:focus, input[type="file"]:focus {
  outline: none;
  border-color: #b6e0fe;
  background: #eaf6fb;
}
.form-check {
  display: flex;
  align-items: center;
  margin-bottom: 6px;
}
.form-check-input {
  accent-color: #b6e0fe;
  margin-right: 8px;
}
.post_form label {
  display: inline-block;
  margin-right: 10px;
  background: #ffe6fa;
  border-radius: 12px;
  padding: 6px 14px;
  cursor: pointer;
  transition: background 0.2s;
  border: 1px solid #f3d1e6;
}
.post_form label:hover, .post_form input[type="radio"]:checked + label {
  background: #e0f7fa;
  border-color: #b6e0fe;
}
input[type="radio"] {
  accent-color: #f7b6e0;
  margin-right: 4px;
}
.post_form .text {
  font-size: 0.95em;
  color: #a48fa3;
  margin-right: 4px;
}
input[type="submit"] {
  background: linear-gradient(90deg, #b6e0fe 0%, #ffe6fa 100%);
  color: #6d5d6e;
  border: none;
  border-radius: 16px;
  padding: 10px 32px;
  font-size: 1.1em;
  font-weight: bold;
  box-shadow: 0 2px 8px rgba(200, 200, 220, 0.10);
  cursor: pointer;
  transition: background 0.2s, color 0.2s;
}
input[type="submit"]:hover {
  background: linear-gradient(90deg, #e0f7fa 0%, #ffe6fa 100%);
  color: #4b3b4e;
}
h1, h3, h4, h5 {
  color: #a48fa3;
  text-align: center;
}
</style>